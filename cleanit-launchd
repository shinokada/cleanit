#!/usr/bin/env bash

# path to notifier
# notifier=changenotifierpath
# path to cleanit
# cleanit=changecleanitpath
# clean-up Download
# store the output to a variable
download_notice=$(changecleanitpath -D changedays downloads)
# clean-up Trash
trash_notice=$(changecleanitpath -D changedays trash)

changenotifierpath -title Cleanit -message "Downloads cleanup: ${download_notice}"
changenotifierpath -title Cleanit -message "Trash cleanup: ${trash_notice}"
